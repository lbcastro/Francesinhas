<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.Theme">
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/blue_dark</item>
        <item name="android:colorAccent">@color/blue_light</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/blue_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--<item name="android:navigationBarColor">@android:color/transparent</item>-->
    </style>

    <style name="Text.Votes" parent="Text.Default">
        <item name="android:gravity">center</item>
        <item name="android:maxEms">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:fontFeatureSettings">onum</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
</resources>