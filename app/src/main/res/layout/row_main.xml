<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/row_main_height"
    android:layout_marginLeft="@dimen/margin_s"
    android:layout_marginRight="@dimen/margin_s"
    android:layout_marginTop="@dimen/margin_s"
    android:animateLayoutChanges="true"
    android:descendantFocusability="blocksDescendants"
    app:cardElevation="@dimen/margin_s"
    card_view:cardCornerRadius="@dimen/margin_xs">

    <RelativeLayout
        android:id="@+id/clickable_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:animateLayoutChanges="true">

        <include
            layout="@layout/backdrop_shaded"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/black_gradient"/>

        <TextView
            android:id="@+id/custom_row_ranking"
            style="@style/Text.Header.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="@dimen/margin_m"
            android:layout_marginStart="@dimen/margin_m"
            android:gravity="start|center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/custom_row_name"
            style="@style/ExpandedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/custom_row_ranking"
            android:layout_marginLeft="@dimen/margin_s"
            android:layout_marginStart="@dimen/margin_s"
            android:layout_toEndOf="@id/custom_row_ranking"
            android:layout_toRightOf="@id/custom_row_ranking"
            android:textColor="@android:color/white"
            android:transitionName="@string/transition_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_parent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/margin_s"
        android:layout_marginEnd="@dimen/margin_s"
        android:layout_marginRight="@dimen/margin_s"
        android:animateLayoutChanges="true"
        android:background="@android:color/transparent"
        android:gravity="bottom">

        <TextView
            android:id="@+id/votes_down"
            style="@style/Text.Header.2"
            android:layout_width="@dimen/ranking_size"
            android:layout_height="@dimen/ranking_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_circle"
            android:gravity="center"
            android:maxEms="3"
            android:textColor="@color/red_faded"
            android:textStyle="bold"
            app:elevation="4dp"/>

        <View
            android:id="@+id/votes_down_indicator"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_alignLeft="@id/votes_down"
            android:layout_alignRight="@id/votes_down"
            android:layout_below="@id/votes_down"
            android:layout_marginBottom="@dimen/margin_s"
            android:layout_marginLeft="@dimen/margin_s"
            android:layout_marginRight="@dimen/margin_s"
            android:background="@color/red_faded"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/votes_up"
            style="@style/Text.Header.2"
            android:layout_width="@dimen/ranking_size"
            android:layout_height="@dimen/ranking_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_xl"
            android:layout_marginRight="@dimen/margin_xl"
            android:layout_marginTop="2dp"
            android:background="@drawable/selector_circle"
            android:gravity="center"
            android:maxEms="3"
            android:textColor="@color/green_bright"
            android:textStyle="bold"
            app:elevation="4dp"/>

        <View
            android:id="@+id/votes_up_indicator"
            layout="@layout/vote_indicator"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_alignLeft="@id/votes_up"
            android:layout_alignRight="@id/votes_up"
            android:layout_below="@id/votes_up"
            android:layout_marginBottom="@dimen/margin_s"
            android:layout_marginLeft="@dimen/margin_s"
            android:layout_marginRight="@dimen/margin_s"
            android:background="@color/green_faded"
            android:visibility="invisible"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>