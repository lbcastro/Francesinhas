<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/row_main_height"
    android:layout_marginLeft="@dimen/margin_xsmall"
    android:layout_marginRight="@dimen/margin_xsmall"
    android:layout_marginTop="@dimen/margin_xsmall"
    android:descendantFocusability="blocksDescendants"
    card_view:cardCornerRadius="@dimen/margin_xsmall">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/dark_gray">

        <LinearLayout
            android:id="@+id/votes_parent"
            style="@style/Base.Widget.AppCompat.ButtonBar"
            android:layout_width="@dimen/button_size"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:animateLayoutChanges="true"
            android:background="@drawable/black_gradient"
            android:orientation="vertical">

            <TextView
                android:id="@+id/votes_up"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textColor="@color/green_bright"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/votes_down"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textColor="@color/red_faded"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/custom_row_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_light"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/custom_row_clickable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector"
            android:clickable="true"
            android:focusable="true" />

        <RelativeLayout
            android:id="@+id/text_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/custom_row_ranking"
                style="@style/Text.Header.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:textColor="#64000000"
                android:textSize="130sp" />

            <TextView
                android:id="@+id/custom_row_name"
                style="@style/Text.Header.1"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="32dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/custom_row_location"
                style="@style/Text.Header.2"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:gravity="center" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>