<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/details_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:id="@+id/details_card_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_m">

        <TextView
            android:id="@+id/details_card_label"
            style="@style/Text.Header.4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_m"/>

        <TextView
            android:id="@+id/details_card_content"
            style="@style/Text.Header.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="true"
            android:paddingEnd="@dimen/margin_m"
            android:paddingStart="@dimen/margin_xl"
            android:paddingTop="@dimen/margin_s"
            android:singleLine="true"/>
    </LinearLayout>
</android.support.v7.widget.CardView>