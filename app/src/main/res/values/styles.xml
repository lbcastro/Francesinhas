<resources>

    <style name="AppTheme" parent="Base.Theme"/>

    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

    <style name="Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
    </style>

    <style name="Animation.Dialog" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Text.Default" parent="AppTheme">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Header.1" parent="Text.Default">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header.2" parent="Text.Default">
        <item name="android:textSize">@dimen/text_size_s</item>
    </style>

    <style name="Text.Header.3" parent="Text.Default">
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.Header.4" parent="Text.Default">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/margin_m</item>
        <item name="android:paddingLeft">@dimen/margin_m</item>
        <item name="android:paddingStart">@dimen/margin_l</item>
    </style>

    <style name="Text.Header.5" parent="Text.Default">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Details.Label" parent="Text.Header.4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_m</item>
    </style>

    <style name="Text.Details.Content" parent="Text.Header.3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/margin_xl</item>
        <item name="android:paddingEnd">@dimen/margin_xl</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Votes" parent="Text.Default">
        <item name="android:gravity">center</item>
        <item name="android:maxEms">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="ExpandedText" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NewExpandedText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ToolbarTheme" parent="Base.Theme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="DetailsLinearParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/row_details_height</item>
        <item name="android:minHeight">@dimen/row_details_height</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/margin_m</item>
    </style>

    <style name="DetailsCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/card_margin_vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

</resources>